<br>
<h3><%= @playlist.name %></h3>

<br/>
<% @playlist.playlist_videos.each do |video| %>
  <% videos = Video.all.find_all{|v| v.video_id if v.id == video.id}  %>
    <% videos.each do |vi| %>
      <div class="card-index firstone">
          <a href="/videos/<%= vi.id %>">
            <div>
              <img class = "thumbnail" src="<%= vi.thumbnail_url %>" width="100%" height="100%">
              <p class="card-text"><%= vi.title %></p>
            </div>
          </a>
      </div>
    <% end %>
<% end %>

<%= button_to "add_video", new_playlist_video_path, method: :get %