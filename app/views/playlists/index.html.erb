<br><br>
<div class="indexpage">
  <div class="stickyrighttop"><%= button_to "+ New Playlist", new_playlist_path, class:"searchbutton", method: :get %></div>
  <h4><%= @current_user.name %>'s Playlists</h4>
  <% @playlists.each do |playlist| %>
        <div class="card-index firstone">
            <a href="/playlists/<%= playlist.id %>">
              <div>
                <% if playlist.videos.count == 0 %>
                  <img class = "thumbnail" src="/images/buttonclip.png" width="56%" height="100%">
                  <p class="card-text"><%= playlist.name %></p>
                <% else %>
                  <img class = "thumbnail" src="<%= playlist.videos.last.thumbnail_url %>" width="100%" height="100%">
                  <p class="card-text"><%= playlist.name %></p>
                <% end %>
              </div>
            </a>
        </div>
  <% end %>
</div>
