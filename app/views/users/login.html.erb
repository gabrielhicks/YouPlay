<ul>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <li style="color:red;"><%= error %></li>
    <% end %>
<% end %>
</ul>
<%= form_tag "/login" do  %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in" %>
<% end %>